<% layout("./layouts/boilerplate.ejs") %>

<div class="row mt-3">
    <div class="col-8 offset-2">

        <h3><%=listing.title  %></h3>
        <div class="card listing-card">
            <img src="<%=listing.image.url%>" class="card-img-top show-img" alt="">
        <div class="card-body">
            <div class="card-text">
                <p><b>Owned By-</b> <%=listing.owner.username  %></p>
                <p><%=listing.description  %></p>
                <p> <b>

                    &#8377;<%=listing.price.toLocaleString("en-IN")%>/night
                </b>
            </p>
            <div class="card-location">
            <p class="card-text"><%= listing.location %></p>
            <p class="card-text"><%= listing.country%></p>
          </div>
            </div>
        </div>
    </div>
     <% if(currUser && currUser._id.equals(listing.owner._id)) {%>
    <div class="card-location">
       
           <a href="/listings/<%=listing._id%>/edit" class="btn btn-success">Edit listings</a>
           <form action="/listings/<%=listing._id%>/?_method=DELETE" onsubmit="return confirmDelete()" method="post">
               <button class="btn btn-danger" type="submit">Delete</button>
            </form>
    
    </div>
    <% } %>
    <div class="col-8 offset-2 ">
           <h4>All reviews </h4>
           
            <div class="row">

                <% for(review of listing.reviews){ %>
                    <div class="card mb-3 ms-3 col-5">
                        <div class="card-body">
                            <h5 class="card-title"><%=review.author.username %></h5>
                            <p class="card-text"><%=review.comment  %></p> 
                            <!-- <p class="card-text"> <%=review.rating  %>,Star</p> -->
                            <p class="starability-result card-text" data-rating=<%= review.rating   %>>
                              
                              </p>
                            <form  method="post" action="/listings/<%=listing._id%>/reviews/<%=review._id%>/?_method=DELETE" class="mb-3">
                             <button class="btn btn-sm btn-dark" type="submit">Delete</button>
                            </form>
                        </div>
                    </div>
                    <%}  %>
                </div>
           
    </div>
    <hr>
    <% if(currUser){%>
    <div class="col-8 offset-2 ">
        
       <h4>Leave a ratings</h4>
       
       <form action="/listings/<%=listing._id  %>/reviews" method="post" novalidate class="needs-validation">
        <div class="mb-3 ">
            <label class="form-label" for="rating">Rating</label>
            <!-- <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating" required> -->
            <fieldset class="starability-slot">
                <legend>First rating:</legend>
                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                <label for="first-rate1" title="Terrible">1 star</label>
                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                <label for="first-rate2" title="Not good">2 stars</label>
                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                <label for="first-rate3" title="Average">3 stars</label>
                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                <label for="first-rate4" title="Very good">4 stars</label>
                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                <label for="first-rate5" title="Amazing">5 stars</label>
              </fieldset>
        </div>
        <div>
            <label class="form-label" for="comment">comment</label>
            <textarea cols="30" rows="5" class="form-control" name="review[comment]" required  id="comment"></textarea>
        </div>
        <div class="">

            <button class="btn btn-primary" type="submit">Submit</button>
        </div>
       </form>
    </div>
    <% } %>

</div>
</div>

